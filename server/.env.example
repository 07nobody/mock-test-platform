# Server environment configuration
# Copy this file to server/.env and provide real secrets before running locally or deploying.

# MongoDB connection (provide either a hosted SRV string or local connection)
MONGO_URL=
MONGO_LOCAL_URL=mongodb://127.0.0.1:27017/QuizAppV2

# JWT secret used for signing auth tokens
JWT_SECRET=

# Resend Email configuration (get API key from https://resend.com)
RESEND_API_KEY=
FROM_EMAIL=Mock Test Platform <onboarding@resend.dev>
ADMIN_EMAIL=
EMAIL_DEV_MODE=false

# Production settings
NODE_ENV=production
CLIENT_URL=https://your-frontend-url.vercel.app
ALLOWED_ORIGINS=https://your-frontend-url.vercel.app

# API server settings
PORT=5000
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_WINDOW_MINUTES=15
MONGO_SERVER_SELECTION_TIMEOUT_MS=5000
MONGO_SOCKET_TIMEOUT_MS=45000

# Development helpers
USE_IN_MEMORY_DB=true
